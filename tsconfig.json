{
	"compilerOptions": {
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"outDir": "./dist",
		"inlineSourceMap": false,
		"inlineSources": false,
		"module": "ESNext",
		"allowJs": true,
		"resolveJsonModule": true,
		"rootDir": ".",
		"strict": true,
		"target": "es2018",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		]
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"**/node_modules",
		"**/build",
		"**/dist",
		"**/*.md",
		"**/rollup.config.js"
	]
}
